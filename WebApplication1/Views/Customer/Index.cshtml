@model IEnumerable<Customer>


<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6 d-flex justify-content-start ">
            <h3>Customers List </h3>
        </div>
        <div class="col-6 d-flex justify-content-end align-items-center">
            <a asp-controller="Customer" asp-action="Create" class="btn btn-primary px-3 "> Create</a>
        </div>
    </div>

<table class="table table-striped table-bordered text-md-center">
    <thead class="thead-dark ">
        <tr>
            <th>
                Name
            </th>
              <th>
                Email
            </th>
              <th>
                PhoneNumber
            </th>
            <th colspan="3">
                Actions
</th>
</tr>
   </thead>
   <tbody>
      @foreach(var obj in Model.OrderBy(o=>o.Name))
        {
        <tr>
           <td>
               @obj.Name
           </td>
           <td>
               @obj.Email
           </td>
           <td>
               @obj.PhoneNumber
           </td>
           <td>
                    <a asp-controller="Customer" asp-action="Update" asp-route-id="@obj.Id" class="btn btn-primary px-3"> Edit</a>
</td>
<td>
                    <a asp-controller="Customer" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger px-3"> Delete</a>
</td>
       </tr> 
        }

    </tbody>
</table>

</div>